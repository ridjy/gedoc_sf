<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}STC-{% endblock %}</title>

        {% block stylesheets %}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <!-- Bootstrap -->
            <link href="{{asset('bootstrap/css/bootstrap.min.css')}} " rel="stylesheet" type="text/css" />
            <!-- styles -->
            <link href="{{asset('css/styles.css')}} " rel="stylesheet" type="text/css" />

            <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
            <![endif]-->
            {% block css %}{% endblock %}    
        {% endblock %}
        
    </head>
    <body>
        <div class="header">
            <div class="container">
                <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="#">STC - GEDOC</a></h1>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-lg-12">
                        <div class="input-group form">
                            <input type="text" class="form-control" placeholder="recherche...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button">Rechercher</button>
                            </span>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mon compte <b class="caret"></b></a>
                                <ul class="dropdown-menu animated fadeInUp">
                                <li><a href="profile.html">Profil</a></li>
                                <li><a href="login.html">Se deconnecter</a></li>
                                </ul>
                            </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <!--fin div colmd2-->
                </div>
                <!--fin row-->
            </div>
            <!--fin container-->
        </div>
        <!--fin header-->

        <div class="page-content">
            <div class="row">
                <!--debut menu-->
                <div class="col-md-2">
                    <div class="sidebar content-box" style="display: block;">
                        <ul class="nav">
                            <!-- Main menu -->
                            <li {% if nav=='dashboard' %} class="current" {% endif %}>
                                <a href="{{ path('document') }}"><i class="glyphicon glyphicon-home"></i> Tableau de bord</a>
                            </li>
                            <li {% if nav=='users' %} class="current" {% endif %}>
                                <a href="{{ path('document') }}"><i class="glyphicon glyphicon-user"></i> Utilisateurs</a>
                            </li>
                            <li {% if nav=='liste_doc' %} class="current" {% endif %}>
                                <a href="{{ path('document_liste') }}"><i class="glyphicon glyphicon-list"></i> Documents</a>
                            </li>
                            <li class="submenu {% if nav=='categorie' or nav=='motcle' %} current {% endif %}">
                                <a href="#">
                                    <i class="glyphicon glyphicon-tags"></i> Categories et mots clés
                                    <span class="caret pull-right"></span>
                                </a>
                                <!-- Sub menu -->
                                <ul>
                                    <li><a href="{{ path('categorie_liste') }}">Categories</a></li>
                                    <li><a href="{{ path('document') }}">Mots clés</a></li>
                                </ul>
                            </li>
                            <li {% if nav=='notification' %} class="current" {% endif %}>
                                <a href="{{ path('document') }}"><i class="glyphicon glyphicon-envelope"></i> Notifications</a>
                            </li>
                            
                        </ul>
                    </div><!--fin sidebar-->
                </div>
                <!--fin col 2 menu-->
                <div class="col-md-10">
                    {% block body %}{% endblock %}
                </div>
            </div><!--fin row-->    
        </div>
        <!--fin page content-->

        <footer>
         <div class="container">
         
            <div class="copy text-center">
               Copyright 2021 <a href='#'>STC</a>
            </div>
            
         </div>
      </footer>
        {% block javascripts %}
             <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://code.jquery.com/jquery.js"></script>
            <!-- Include all compiled plugins (below), or include individual files as needed -->
            <script src="{{asset('bootstrap/js/bootstrap.min.js')}}"></script>
            <script src="{{asset('js/custom.js')}}"></script>
            {% block jscript %}{% endblock %}
        {% endblock %}
    </body>
</html>
