<!DOCTYPE html>
<html>
  <head>
    <title>STC - GEDOC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="{{asset('bootstrap/css/bootstrap.min.css')}} " rel="stylesheet">
    <!-- styles -->
    <link href="{{asset('css/styles.css')}} " rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="login-bg">
  	<div class="header">
	     <div class="container">
	        <div class="row">
	           <div class="col-md-12">
	              <!-- Logo -->
	              <div class="logo">
	                 <h1><a href="#">STC-GEDOC</a></h1>
	              </div>
	           </div>
	        </div>
	     </div>
	</div>

	<div class="page-content container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="login-wrapper">
			        <div class="box">
			            <div class="content-wrap">
                        <form name="login-form" id="f1" action="{{ path('signup') }}" method="POST">
			                <h6>S'inscrire</h6>
                            <input class="form-control" id="nom" name='nom' type="text" placeholder="Nom">
                            <input class="form-control" id="prenom" name='prenom' type="text" placeholder="Prenom">
			                <input class="form-control" id="mail" name='mail' type="text" placeholder="Adresse mail">
			                <input class="form-control" id="mdp" name='mdp' type="password" placeholder="Mot de passe">
			                <input class="form-control" id="mdp2" name='mdp2' type="password" placeholder="Confirmer le mot de passe">
                            <p id="pass" style="display:none;font-size: 14px; color: red;">Les mots de passe ne sont pas identiques</p>
			                <div class="action">
			                    <button class="btn btn-primary signup" id="valid">Valider</button>
			                </div>
                            <p id="vide" style="display:none;margin-top: 35px;font-size: 14px; color: red;">Tous les champs sont obligatoires</p>
                            
                        </form>                    
			            </div>
			        </div>

			        <div class="already">
			            <p>Déjà enregistré ?</p>
			            <a href="{{ path('login') }}">Se connecter</a>
			        </div>
			    </div>
			</div>
		</div>
	</div>



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="{{asset('js/jquery1.11.1.js')}}"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{asset('bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{asset('js/custom.js')}}"></script>
    <script type="text/javascript">
        $("#valid").click(function(event) {
            event.preventDefault();
            if ($('#nom').val() == '')
            {
                $('#vide').show();
            } else if($('#prenom').val() == '') {
                $('#vide').show();
            } else if ($('#mail').val() == '') {
                $('#vide').show();
            } else if ($('#mdp').val() == '') {
                $('#vide').show();
            } else if ($('#mdp').val() != $('#mdp2').val()) {
                $('#pass').show();
                $('#vide').hide();
            } else{
                $('#f1').submit();
            }

        });//end valid 

            
    </script>
  </body>
</html>