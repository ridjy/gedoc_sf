{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
<div class="row">    
    <div class="col-md-2">
        <a href="{{ path('users_new') }}"><button class="btn btn-primary" type="button">Ajouter un collaborateur</button></a>
    </div>
</div> <br/><br/>    
<div class="row">    
    <div class="col-md-12">
        <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Collaborateurs enregistr√©s</div>			
                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                    <!--<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                    -->
                </div>
            </div><!--fin title-->

            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="{{ path('users_show', {'usersId': user.usersId}) }}"><i class="glyphicon glyphicon-user"></i></a>&nbsp;&nbsp;
                                <a href="{{ path('users_edit', {'usersId': user.usersId}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucun enregistrement</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>    

        </div>
        </div>    
    </div><!--end div-->
</div><!--end div row-->        
{% endblock %}
