<div class="panel panel-success">

    <div class="panel-body">
        <form id="editdoc" method="POST" action="#">
            <div class="form-group row">
                <label class="col-md-3 control-label" for="date_publication">Date de publication:</label>
                <div class="col-md-5">
                    <input class="form-control" id="date_publication" name="date_publication" type="date" 
                    class="form-control" value="{{ doc.getDocDatePublication }}" >
                    <input type="hidden" name="id_doc" value="{{ doc.getDocId }}">
                </div>
            </div><!--fin div date publication-->

            <div class="form-group row">
                <label for="titre" class="col-md-3 control-label">Titre document:</label>
                <div class="col-sm-9">
                    <input name="titre" id="titre_doc" type="text" class="form-control" 
                    value="{{ doc.getDocTitre }}" >
                </div>          
            </div><!--fin titre doc-->

            <div class="form-group row">
                <label for="date_creation" class="col-md-3 control-label">Date de création:</label>
                <div class="col-sm-5">
                    <input name="date_creation" id="date_creation" readonly="" class="form-control" value='{{ doc.getDocDateCreation }}'>
                </div>          
            </div><!--fin date creation-->
                  
            <div class="form-group row">
                <label for="categorie" class="col-sm-3 col-form-label">Catégorie(s):</label>
                <div class="col-sm-12" id="selcateg">
                    <select style="display:none" id="cats" name="categories[]" multiple>
                        {% for var in categories %}
                            <option value="{{ var.getCatId }}" 
                            {% if var.getCatLibelle in categoriesDoc %} selected {% endif %}>{{ var.getCatLibelle }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="mot_cle" class="col-sm-3 col-form-label">Mot(s) clé(s):</label>
                <div class="col-sm-12" id="selmc">
                    <select style="display:none" id="mcs" name="motcles[]" multiple>
                        {% for var in motcles %}
                            <option value="{{ var.getMcId }}" 
                            {% if var.getMcLib in motclesDoc %} selected {% endif %}>{{ var.getMcLib }}</option>
                        {% endfor %}
                    </select>
                </div>    
            </div><!--fin mc-->
                  
            <div class="form-group row">
                <label for="description" class="col-sm-3 col-form-label">Description:</label>
                <div class="col-sm-9">
                    <textarea class="form-control" name="description" id="description" rows="3">{{ doc.getDocDescription }}</textarea>
               </div>
            </div>
            <!--fin description-->      

            <div class="form-group row">
                <label for="fichier" class="col-sm-4 col-form-label">Fichier : </label>
                <br/>
                <div class="col-sm-10">
                    <p>{{ doc.getDocName }}</p>
                </div>
            </div>
        </form>

    </div><!--fin panelbody-->
</div><!--fin panel success-->

<script>
$('#selmc').dropdown({
    input: '<input type="text" maxLength="20" placeholder="Recherche rapide">',
    data: [],
    searchable: true
});
$('#selcateg').dropdown({
    input: '<input type="text" maxLength="20" placeholder="Recherche rapide">',
    data: [],
    searchable: true
});
</script>


